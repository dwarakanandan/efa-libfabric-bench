#!/bin/bash

printf "\nPulling from git...\n"
git pull

if [ "$1" != "" ]; then
    printf "\nConfigure remote node's IP...\n"
    sed -i "/--dst_addr=.*/c\--dst_addr=$1" efa-bench/client.conf
fi

printf "\nCleaning build DIR...\n"
rm -rf build
mkdir build
cd build

printf "\nBuilding project...\n"
cmake ..
make